<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--用户接口-->
    <LinearLayout android:id="@+id/ll_tool"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorCenter">

        <ImageView android:id="@+id/iv_broadcast_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/me"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:padding="3dp"
            android:contentDescription="@string/string_me_description" />



        <TextView android:id="@+id/tv_broadcast"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:hint="@string/string_et_broadcast"
            android:textColorHint="#d7bfbf"
            android:paddingStart="40dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@null" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_broad_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f7f7" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_broad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>